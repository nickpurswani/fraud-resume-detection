# =============================================================================
# Fraudulent Candidate Detection Tool - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# Never commit the actual .env file to version control!

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# Google Gemini AI Configuration (Required for advanced NLP features)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=2000
GEMINI_TEMPERATURE=0.3

# Gemini Safety Settings
GEMINI_SAFETY_HARASSMENT=BLOCK_MEDIUM_AND_ABOVE
GEMINI_SAFETY_HATE_SPEECH=BLOCK_MEDIUM_AND_ABOVE
GEMINI_SAFETY_SEXUALLY_EXPLICIT=BLOCK_MEDIUM_AND_ABOVE
GEMINI_SAFETY_DANGEROUS_CONTENT=BLOCK_MEDIUM_AND_ABOVE

# Gemini Rate Limiting
GEMINI_RATE_LIMIT_PER_MINUTE=60
GEMINI_REQUESTS_PER_DAY=1000

# LinkedIn API Configuration (Optional - for profile verification)
# Get your API key from: https://www.linkedin.com/developers/
LINKEDIN_API_KEY=your_linkedin_api_key_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (Optional - defaults to SQLite if not specified)
# Examples:
# SQLite: sqlite:///fraud_detection.db
# PostgreSQL: postgresql://username:password@localhost:5432/fraud_detection
# MySQL: mysql://username:password@localhost:3306/fraud_detection
DATABASE_URL=sqlite:///fraud_detection.db

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=logs/fraud_detection.log

# Enable/disable different log types
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_SQL_QUERIES=false

# Log rotation settings
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# PROCESSING LIMITS & PERFORMANCE
# =============================================================================

# File upload limits
MAX_FILE_SIZE_MB=10
SUPPORTED_FILE_TYPES=pdf,docx,doc,txt

# Batch processing limits
MAX_BATCH_SIZE=50
BATCH_TIMEOUT_MINUTES=30

# Processing threads
MAX_WORKER_THREADS=4
ANALYSIS_TIMEOUT_SECONDS=120

# Memory limits
MAX_MEMORY_PER_ANALYSIS_MB=512

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Enable/disable caching
CACHE_ENABLED=true

# Cache type (memory, redis, file)
CACHE_TYPE=memory

# Cache timeout (in seconds)
CACHE_TIMEOUT=3600

# Redis configuration (if using Redis cache)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# File cache directory
CACHE_DIR=.cache

# =============================================================================
# FRAUD DETECTION THRESHOLDS
# =============================================================================

# Experience analysis thresholds (0.0 to 1.0)
THRESHOLD_EXPERIENCE_INCONSISTENCY=0.7
THRESHOLD_EDUCATION_MISMATCH=0.6
THRESHOLD_SKILL_EXPERIENCE_GAP=0.8
THRESHOLD_TIMELINE_INCONSISTENCY=0.7
THRESHOLD_LOCATION_DISCREPANCY=0.6

# Content analysis thresholds
THRESHOLD_PLAGIARISM_SIMILARITY=0.85
THRESHOLD_DUPLICATE_CONTENT=0.9
THRESHOLD_SUSPICIOUS_KEYWORDS=0.6

# Career progression thresholds
THRESHOLD_SALARY_INFLATION=0.8
THRESHOLD_CAREER_PROGRESSION_ANOMALY=0.7

# =============================================================================
# NLP & ML MODEL CONFIGURATION
# =============================================================================

# spaCy model name
SPACY_MODEL=en_core_web_sm

# Sentence transformer model
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Enable/disable specific NLP features
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_NAMED_ENTITY_RECOGNITION=true
ENABLE_SIMILARITY_ANALYSIS=true
ENABLE_KEYWORD_EXTRACTION=true

# Model caching
MODEL_CACHE_DIR=models/cache
DOWNLOAD_MODELS_ON_STARTUP=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Session management
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=10

# Rate limiting (requests per minute/hour)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Data encryption (for sensitive data storage)
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPT_SENSITIVE_DATA=false

# CORS settings (for API access)
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# =============================================================================
# FILE STORAGE & PATHS
# =============================================================================

# Upload directory
UPLOAD_DIR=uploads

# Reports output directory
REPORTS_DIR=reports

# Temporary files directory
TEMP_DIR=temp

# Templates directory
TEMPLATES_DIR=templates

# Static files directory (for web interface)
STATIC_DIR=static

# Backup directory
BACKUP_DIR=backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable major features
ENABLE_LINKEDIN_VERIFICATION=true
ENABLE_JOB_FIT_ANALYSIS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_EXPORT_REPORTS=true
ENABLE_VISUAL_ANALYTICS=true

# Experimental features
ENABLE_ADVANCED_NLP=false
ENABLE_ML_PREDICTIONS=false
ENABLE_REAL_TIME_ANALYSIS=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Webhook URLs (for notifications)
WEBHOOK_URL_HIGH_RISK=
WEBHOOK_URL_BATCH_COMPLETE=
WEBHOOK_SECRET=

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=noreply@yourcompany.com

# Slack integration
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#fraud-alerts

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Enable monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Analytics tracking
ENABLE_ANALYTICS=false
ANALYTICS_ID=

# Health check settings
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=10

# Performance monitoring
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=profiles

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Environment type (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Server settings (for production deployment)
HOST=0.0.0.0
PORT=8501

# Load balancer settings
ENABLE_LOAD_BALANCER=false
WORKER_PROCESSES=4

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Automatic backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Backup destinations
BACKUP_TO_S3=false
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# Data retention settings
DATA_RETENTION_DAYS=365
AUTO_DELETE_OLD_DATA=false

# Privacy settings
ANONYMIZE_REPORTS=false
GDPR_COMPLIANCE_MODE=false

# Audit logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=logs/audit.log

# Terms of service and privacy policy URLs
TERMS_OF_SERVICE_URL=
PRIVACY_POLICY_URL=

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test database (for running tests)
TEST_DATABASE_URL=sqlite:///test_fraud_detection.db

# Mock services (for testing without API keys)
USE_MOCK_GEMINI=false
USE_MOCK_LINKEDIN=false

# Development tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SQL_ECHO=false

# Testing settings
RUN_INTEGRATION_TESTS=false
TEST_DATA_DIR=tests/data

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Company-specific settings
COMPANY_NAME=Your Company Name
COMPANY_LOGO_URL=
BRAND_COLOR=#1f77b4

# Custom thresholds (override defaults)
CUSTOM_RISK_MULTIPLIER=1.0
CUSTOM_CONFIDENCE_THRESHOLD=0.5

# Industry-specific settings
TARGET_INDUSTRY=technology
INDUSTRY_SPECIFIC_KEYWORDS=

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

# Note: After updating this file, restart the application for changes to take effect
# Some changes may require clearing the cache or rebuilding Docker containers
